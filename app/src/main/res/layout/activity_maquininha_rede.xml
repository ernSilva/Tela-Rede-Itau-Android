<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MaquininhaRedeActivity">


    <ListView
        android:id="@+id/toolbar"
        android:layout_width="416dp"
        android:layout_height="72dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-3dp"
        tools:listitem="@layout/item_toolbar" />

    <ListView
        android:id="@+id/maquininha"
        android:layout_width="215dp"
        android:layout_height="227dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        tools:listitem="@layout/item_maquininha" />

    <ListView
        android:id="@+id/values"
        android:layout_width="390dp"
        android:layout_height="131dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/maquininha"
        tools:layout_editor_absoluteX="10dp"
        tools:listitem="@layout/item_value" />

    <ListView
        android:id="@+id/infos"
        android:layout_width="391dp"
        android:layout_height="85dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/values"
        tools:layout_editor_absoluteX="10dp"
        tools:listitem="@layout/item_info" />

    <ListView
        android:id="@+id/plano"
        android:layout_width="414dp"
        android:layout_height="320dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/infos"
        tools:layout_editor_absoluteX="-2dp"
        tools:listitem="@layout/item_plano" />

</androidx.constraintlayout.widget.ConstraintLayout>
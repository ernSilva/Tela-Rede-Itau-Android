<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/maquininha"
        android:layout_width="180dp"
        android:layout_height="226dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sem_fio_frente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <TextView
        android:id="@+id/item_maquininha"
        android:layout_width="95dp"
        android:layout_height="15dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="208dp"
        android:background="@drawable/rounded_corner_green"
        android:scrollbarStyle="outsideInset"
        android:text="@string/conta"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintCircleRadius="20dp"
        app:layout_constraintStart_toStartOf="@+id/maquininha"
        app:layout_constraintTop_toTopOf="@+id/maquininha" />
</androidx.constraintlayout.widget.ConstraintLayout>